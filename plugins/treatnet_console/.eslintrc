---
root: true
env:
  browser: true
  es6: true
  node: true
  mocha: true
extends: standard
globals:
  Atomics: readonly
  SharedArrayBuffer: readonly
parserOptions:
  ecmaFeatures:
    jsx: true
  ecmaVersion: 2018
  sourceType: module
plugins:
  - react
rules:
  semi:
    - 2
    - "always"
  comma-dangle: off
  no-unused-vars: off
